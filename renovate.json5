{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor"],
      "automerge": false
    },
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true
    }
  ],
  "schedule": ["every weekend"],
  onboarding: false,
  requireConfig: "ignored",
  platform: "github",
  repositories: ["cazlo/fastapi-async-task-workflow"],
  prConcurrentLimit: 0,
  prHourlyLimit: 5,
  semanticCommits: "enabled",
  enabledManagers: [
    // https://docs.renovatebot.com/modules/manager/#supported-managers
    "github-actions",
//    "pep621", // for uv
    "poetry",
    "dockerfile",
    "custom.regex", // expected future
  ],
  "regexManagers": [
    {
      "fileMatch": ["^.*Dockerfile$"],
      "matchStrings": [
        "RUN pip install (?<depName>[a-zA-Z0-9_-]+)(?:==(?<currentValue>[^\\s]+))?",
        "RUN pip3 install (?<depName>[a-zA-Z0-9_-]+)(?:==(?<currentValue>[^\\s]+))?"
      ],
      "datasourceTemplate": "pypi",
      "versioningTemplate": "pep440"
    },
    {
      "fileMatch": ["^.*Dockerfile$"],
      "matchStrings": [
        "RUN apk add (?:--[a-z-]+ )*(?<depName>[a-zA-Z0-9_-]+)(?:=(?<currentValue>[^\\s]+))?"
      ],
      "datasourceTemplate": "repology",
      "depNameTemplate": "alpine_3_21/{{depName}}",
      "versioningTemplate": "loose"
    }
  ]
}